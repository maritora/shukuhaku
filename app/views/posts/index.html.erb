<div class="container-fiuld reservations">
 <h4 class="pb-4">予約済みルーム一覧</h4>
 <table>
  <thead>
   <tr align="center">
    <th>ルーム画像</th>
    <th>ルーム名</th>
    <th>ルーム紹介</th>
    <th>合計料金</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>予約確定日時</th>
   </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <% @posts.each do |post| %>
        <% if room.id == post.room_id %>
          <tr>
            <td><%= image_tag room.image.variant(resize_to_fill: [200, 150]) %></td>
            <td class="posts-name"><%= link_to room.name,room %></td>
            <td class="posts-content"><%= room.info %></td>
            <td class="price-icon">￥<%= post.totalprice %></td>
            <td><%= post.start.to_s(:datetime_jp) %></td>
            <td><%= post.end.to_s(:datetime_jp) %></td>
            <td><%= post.created_at.to_s(:datetime_jp) %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
 </table>
</div>