<h3>ルーム情報登録</h3>
 
<%= form_with model: @room,local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"ルーム名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :info ,"ルーム説明" %></th>
      <td><%= f.text_field :info %></td>
    </tr>

    <tr>
      <th><%= f.label :price ,"料金" %></th>
      <td><%= f.text_field :price %></td>
    </tr>

    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :image ,"ルーム画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
    </ul>
  </div>
<% end %>