
<body>
 <div class="top">
  <div class="top-main">
   <div class="container">
    <div class="row col-lg-6">
     <div class="form-fream">
      <div class="form-area">
       <p class="form-area-title mb-4">YOYAKUどっとこむで簡単予約</p>
       <div class="search-form">
        <label for="___">エリア</label>
        <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索" %>
        <% end %>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>

  <div class="container">
   <div class="panel-area m-5">
    <h2>おすすめエリア</h2>
    <div class="row">
     <div class="panel-item col-lg-3 col-6">
      <span>広島</span>
      <%= image_tag "hiroshima.jpeg", class:"panel-image" %>
     </div>
     <div class="panel-item col-lg-3 col-6">
      <span>大阪</span>
      <%= image_tag "osaka.jpeg", class:"panel-image" %>
     </div>
     <div class="panel-item col-lg-3 col-6">
      <span>栃木</span>
      <%= image_tag "sano.jpeg", class:"panel-image" %>
     </div>
     <div class="panel-item col-lg-3 col-6">
      <span>長崎</span>
      <%= image_tag "nagasaki.jpeg", class:"panel-image" %>
     </div>
    </div>
   </div>
  </div>
 </div>
